{
  "name": "alphax",
  "version": "1.0.3",
  "description": "Fueling your scaffolding.",
  "repository": {
    "url": "ULIVZ/alphaX",
    "type": "git"
  },
  "main": "dist/alphax.js",
  "files": [
    "src",
    "dist",
    "index.d.ts"
  ],
  "scripts": {
    "test:cov": "jest test/** --coverage && npm run lint",
    "test": "npm run lint && jest",
    "lint": "xo src/**",
    "prepublish": "npm run build",
    "build": "bili",
    "website": "w7 ./docs"
  },
  "author": "ULIVZ <chl814@foxmail.com>",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "bili": {
    "input": "src/index.ts",
    "js": "typescript",
    "filename": "alphax.js",
    "banner": true
  },
  "babel": {
    "env": {
      "plugins": [
        "@babel/plugin-proposal-object-rest-spread"
      ],
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "dependencies": {
    "event-stream": "^4.0.1",
    "tslib": "^1.9.0",
    "vinyl-fs": "^3.0.1",
    "minimatch": "^3.0.4",
    "ware": "^1.3.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.40",
    "@types/event-stream": "^3.3.33",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.16",
    "@types/node": "^12.6.8",
    "@types/vinyl-fs": "^2.4.8",
    "bili": "^4.8.1",
    "eslint-config-rem": "^4.0.0",
    "fs-extra": "^8.1.0",
    "jest-cli": "^24.8.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "xo": "^0.24.0"
  },
  "typings": "index.d.ts",
  "xo": {
    "extends": "rem",
    "esnext": true,
    "envs": [
      "jest"
    ],
    "ignores": [
      "test/fixture/**",
      "test/output/**",
      "examples/**"
    ],
    "rules": {
      "guard-for-in": 0
    }
  }
}
